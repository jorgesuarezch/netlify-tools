{
  "extends": ["oclif", "oclif-typescript", "prettier"],
  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": "error",
    "@typescript-eslint/member-delimiter-style": {
      "multiline": {
        "delimiter": "none",
        "requireLast": true
      },
      "singleline": {
        "delimiter": "semi",
        "requireLast": false
      }
    },
    "singleline": {
      "delimiter": "semi",
      "requireLast": false
    }
  }
}
